pipeline {
    agent any
    stages {
        stage('Build and run docker image') {
            steps {
                sh 'docker pull realsahilthakur/2244_ica2:latest'
                sh 'docker run --name dev-container -d -p 8082:80 realsahilthakur/2244_ica2:latest'
            }
        }
        stage('Testing') {
            steps {
                sh 'curl -I http://192.168.196.139:8081'
            }
        }
    }
}
